<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="our.charity_app">
    android:versionCode="1"
    android:versionName="1.0" >


    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WatchActivity"
            android:label="@string/watch_ads" />
        <activity
            android:name=".VoteActivity"
            android:label="@string/vote" />

        <activity
            android:name=".ListActivity"
            android:label="@string/charity_list" />

        <activity
            android:name=".DonationActivity"
            android:label="@string/current_donations" />

        <activity
            android:name=".AboutActivity"
            android:label="@string/about_us" />
        />
    </application>

</manifest>